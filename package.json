{
  "name": "@zaripych/ts-deps",
  "version": "1.0.3",
  "description": "TypeScript related dependencies and libraries to setup/scaffold typical build/lint/format/test pipeline and CI/CD pipeline using babel, jest, prettier, tslint and semantic-release. Meant to be added as dev dependency.",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest --color --silent",
    "clean": "node ./scripts/clean.js",
    "prebuild": "node ./scripts/clean.js",
    "build": "node ./scripts/build.js && node ./scripts/copy-templates.js",
    "type-check": "tsc --noEmit",
    "check": "concurrently \"node ./scripts/build.js\" \"tsc --noEmit\""
  },
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run check"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zaripych/ts-deps.git"
  },
  "keywords": [
    "TypeScript",
    "Dependencies",
    "Build-Pipeline"
  ],
  "author": "@zaripych",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zaripych/ts-deps/issues"
  },
  "homepage": "https://github.com/zaripych/ts-deps#readme",
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.3",
    "@babel/plugin-proposal-class-properties": "7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@semantic-release/exec": "3.3.2",
    "@semantic-release/git": "7.0.8",
    "@types/fs-extra": "5.0.5",
    "@types/inquirer": "0.0.43",
    "@types/jest": "24.0.6",
    "@types/yargs": "12.0.9",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-module-resolver": "3.2.0",
    "commitlint": "7.5.2",
    "concurrently": "4.1.0",
    "deepmerge": "3.2.0",
    "fs-extra": "7.0.1",
    "husky": "1.3.1",
    "inquirer": "6.2.2",
    "jest": "24.1.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "rxjs": "6.4.0",
    "rxjs-tslint-rules": "4.17.1",
    "semantic-release": "15.13.3",
    "source-map-support": "0.5.10",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3333",
    "yargs": "13.2.1"
  },
  "devDependencies": {
    "@types/node": "8.10.40",
    "@types/prettier": "1.16.1"
  },
  "engines": {
    "node": ">= 8.12"
  }
}
