{
  "name": "ts-deps",
  "version": "0.0.0-development",
  "description": "TypeScript related dependencies and libraries to setup/scaffold typical build/lint/format/test pipeline and CI/CD pipeline using babel, jest, prettier, tslint and semantic-release. Meant to be added as dev dependency.",
  "main": "lib/index.js",
  "scripts": {
    "ts-deps": "node ./src/scripts/cli.js",
    "test": "jest --color",
    "integration": "jest --config ./jest.config.integration.js --color -i --testPathIgnorePatterns full",
    "integration-long": "jest --config ./jest.config.integration.js --color -i --testPathPattern full",
    "integration-all": "jest --config ./jest.config.integration.js --color -i",
    "combine-coverage": "node ./scripts/combineCoverage.js",
    "clean": "node ./scripts/clean.js",
    "prebuild": "node ./scripts/clean.js",
    "build": "node ./scripts/build.js",
    "declarations": "tsc -p ./tsconfig.declarations.json",
    "type-check": "tsc",
    "lint": "tslint -p . -t verbose",
    "check": "concurrently \"node ./scripts/build.js\" \"tsc\" \"tslint -p . -t verbose\"",
    "patch": "node ./scripts/patch.js",
    "release": "semantic-release"
  },
  "bin": {
    "ts-deps": "./lib/cli/ts-deps.js"
  },
  "files": [
    "lib",
    "template-max"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn run check"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zaripych/ts-deps.git"
  },
  "keywords": [
    "TypeScript",
    "Dependencies",
    "Build-Pipeline"
  ],
  "author": "@zaripych",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zaripych/ts-deps/issues"
  },
  "homepage": "https://github.com/zaripych/ts-deps#readme",
  "dependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@semantic-release/exec": "3.3.2",
    "@types/fs-extra": "5.0.5",
    "@types/inquirer": "6.0.1",
    "@types/jest": "24.0.12",
    "@types/yargs": "13.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-plugin-module-resolver": "3.2.0",
    "commitlint": "7.5.2",
    "concurrently": "4.1.0",
    "deepmerge": "3.2.0",
    "fast-glob": "2.2.6",
    "fs-extra": "7.0.1",
    "inquirer": "6.3.1",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "pretty-quick": "1.10.0",
    "rxjs-tslint-rules": "4.23.1",
    "semantic-release": "16.0.0-beta.18",
    "source-map-support": "0.5.12",
    "tar-fs": "2.0.0",
    "tslint": "5.15.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.2",
    "yargs": "13.2.2"
  },
  "devDependencies": {
    "@types/node": "8.10.43",
    "husky": "2.2.0",
    "@types/prettier": "1.16.2",
    "@types/tar-fs": "1.16.1"
  },
  "engines": {
    "node": ">= 8.12"
  }
}
